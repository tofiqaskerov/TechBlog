@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Category

<style>
    .error-span{
        color: red;
        font-size: 18px;
        font-weight: 650;
        margin-left:5px;
    }
</style>
<div class="card shadow my-5">
    <div class="card-body">
        <div class="col-lg-6">
            <form class="form-group" method="post">
                <input asp-for=Name class="form-control" type="text" />
                <span class="error-span" asp-validation-for=Name></span>
                <br />
                <input type="submit" value="Update" class="btn btn-outline-success" />
                   <a asp-action="Index" class="btn btn-primary"> Return to Category</a>
            </form>
        </div>

    </div>
</div>