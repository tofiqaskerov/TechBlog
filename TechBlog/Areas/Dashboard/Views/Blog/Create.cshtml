@model Blog
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 

<style>
    input {
        margin-bottom: 10px;
    }
</style>

<div class="card shadow my-5">
    <div class="card-body">
        <form class="form-group" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-6 my-2">
                    <input class="form-control" placeholder="Title" type="text" asp-for="Title" />
                </div>
                <div class="col-lg-6 my-2">
                    <input class="form-control" placeholder="Author" type="text" asp-for="Author" />
                </div>
                 <div class="col-lg-6 my-3">
                    <span>PhotoUrl</span>
                    <input class="form-control" type="file"  name="NewPhotoURL" />
                </div>
                 <div  class="col-lg-6 my-3 ">
                    <span>Category</span>

                    <select  class="form-control" asp-for="CategoryId">

                        @foreach (var category in ViewData["Categories"] as List<Category>)
                        {
                          <option value="@category.Id">@category.Name</option>                          
                        }

                    </select>
                </div>
                <div class="col-lg-12 my-2">
                    <textarea id="editor" class="form-control" placeholder="Description" type="text" asp-for="Description"> </textarea>
                </div>
               
               
               
            </div>
            <input type="submit" value="Create" class="btn btn-outline-success mt4" />
        </form>
    </div>
</div>


@section Scripts {
<script src="https://cdn.ckeditor.com/ckeditor5/34.2.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>

}