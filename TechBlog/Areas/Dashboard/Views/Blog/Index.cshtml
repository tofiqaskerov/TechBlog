@model IEnumerable<Blog>


<a href="/dashboard/blog/create" class="btn btn-success btn-icon-split">
    <span class="icon text-white-50">
        <i class="fas fa-plus"></i>
    </span>
    <span class="text">Create</span>
</a>

<!-- DataTales Example -->
<div class="card shadow my-4">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Author</th>
                        <th>Hit</th>
                        <th>Photo</th>
                        <th>Category</th>
                        <th>PublishDate</th>
                        <th>UpdateDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Author</th>
                        <th>Hit</th>
                        <th>Photo</th>
                        <th>Category</th>
                        <th>PublishDate</th>
                        <th>UpdateDate</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td>@blog.Title</td>
                            <td>@Html.Raw(@blog.Description)</td>
                            <td>@blog.Author</td>
                            <td>@blog.Hit</td>
                            <td>
                                <img src="@blog.PhotoURl" width="200" height="150" />
                            </td>
                            <td>@blog.Category.Name</td>
                            <td>@blog.PublishDate</td>
                            <td>@blog.UpdateDate</td>
                            <td>
                                <a blog-value="@blog.Id" class="btn btnSave btn-outline-danger" >Delete</a>
                                <a class="btn btn-outline-warning" href="/dashboard/blog/edit/@blog.Id">Update</a>
                           
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        $(".btnSave").click(function(e) {

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    let blogId = e.currentTarget.attributes[0].value
                    $.ajax({
                        method: "POST",
                        url: "blog/delete/",
                        data: {
                            id: blogId
                        }
                    })
                    Swal.fire({
                        title: 'Deleted',
                        text: "blog is delete!",
                        icon: 'success',

                    }).then((result) => {
                        window.location = "blog"
                    })

                }
            })
        })
    </script>
}
