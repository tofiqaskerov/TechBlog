<section class="section first-section">
    <div class="container-fluid">
        <div class="masonry-blog clearfix">
            @{
                int count = 0;

                foreach (var blogs in Model.LastBlogs)
                {

                    var title = blogs.Title.Length > 60 ? blogs.Title.Substring(0, 60) + "..." : @blogs.Title;

                    <div class="@(count % 3 == 0 ? "first-slot" : "second-slot") ">

                        <div class="masonry-box post-media">

                            <img src="@blogs.PhotoURl" alt="" class="img-fluid" style="object-fit: cover; height:430.1px">

                            <div class="shadoweffect " style="height: 430.1px">
                                <div class="shadow-desc">
                                    <div class="blog-meta">
                                        <span class="bg-orange"><a asp-controller="Category" asp-action="Index" asp-route-id="@blogs.CategoryId" title="">@blogs.Category.Name</a></span>
                                        <h4><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogs.Id" title="">@title</a></h4>
                                        <small><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogs.Id" title="">@blogs.PublishDate.Day  @blogs.PublishDate.ToString("MMMM"), @blogs.PublishDate.Year</a></small>
                                        <small><a href="tech-author.html" title="">by @blogs.User.Name </a></small>
                                    </div><!-- end meta -->
                                </div><!-- end shadow-desc -->
                            </div><!-- end shadow -->
                        </div><!-- end post-media -->
                    </div>
                    count++;
                    <!-- end second-side -->
                }
            }





        </div><!-- end masonry -->
    </div>
</section>

