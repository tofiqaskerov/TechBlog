@{
    ViewData["Title"] = "Home Page";
}
@model HomeVM
<section class="section first-section">
    <div class="container-fluid">
        <div class="masonry-blog clearfix">
            @{
                int count = 0;

                foreach (var blogs in Model.LastBlogs)
                {

                    var title = blogs.Title.Length > 60 ? blogs.Title.Substring(0, 60) + "..." : @blogs.Title;

                    <div class="@(count % 3 == 0 ? "first-slot" : "second-slot") ">
                        
                        <div class="masonry-box post-media">
                        
                                <img src="@blogs.PhotoURl" alt="" class="img-fluid" style="object-fit: cover; height:430.1px">
                            
                            <div class="shadoweffect " style="height: 430.1px">
                                <div class="shadow-desc">
                                    <div class="blog-meta">
                                        <span class="bg-orange"><a asp-controller="" asp-action="" asp-route-id="@blogs.Id" title="">@blogs.Category.Name</a></span>
                                        <h4><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blogs.Id" title="">@title</a></h4>
                                        <small><a href="tech-single.html" title="">@blogs.PublishDate.Day  @blogs.PublishDate.ToString("MMMM"), @blogs.PublishDate.Year</a></small>
                                        <small><a href="tech-author.html" title="">by @blogs.Author </a></small>
                                    </div><!-- end meta -->
                                </div><!-- end shadow-desc -->
                            </div><!-- end shadow -->
                        </div><!-- end post-media -->
                    </div>
                    count++;
                    <!-- end second-side -->
                }
            }





        </div><!-- end masonry -->
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
