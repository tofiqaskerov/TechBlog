                        <h4 class="pull-left">Recent News <a href="#"><i class="fa fa-rss"></i></a></h4>
                    </div><!-- end blog-top -->

                    <div class="blog-list clearfix">
                        @foreach (var blog in Model.Blogs)
                        {
                            <div class="blog-box row">
                                <div class="col-md-4">
                                    <div class="post-media">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                            <img src="@blog.PhotoURl" alt="" class="img-fluid">
                                            <div class="hovereffect"></div>
                                        </a>
                                    </div><!-- end media -->
                                </div><!-- end col -->

                                <div class="blog-meta big-meta col-md-8">


                                    @{


                                        var title = blog.Title.Length > 60 ? blog.Title.Substring(0, 60) + "..." : @blog.Title;
                                        var description = blog.Description.Length > 150 ? blog.Description.Substring(0, 150) + "..." : @blog.Description;

                                        <h4><a href="tech-single.html" title="">@title</a></h4>
                                        <p> @Html.Raw(description) </p>
                                        <small class="firstsmall"><a class="bg-orange" href="tech-category-01.html" title="">@blog.Category.Name</a></small>
                                        <small><a href="tech-single.html" title="">@blog.PublishDate.Day  @blog.PublishDate.ToString("MMMM"), @blog.PublishDate.Year </a></small>
                                        <small><a href="tech-author.html" title="">by @blog.Author</a></small>
                                        <small><a href="tech-single.html" title=""><i class="fa fa-eye"></i> @blog.Hit</a></small>
                                    }

