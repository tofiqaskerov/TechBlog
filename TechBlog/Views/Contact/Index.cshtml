    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        let button = document.getElementById("submitButton");
        button.onclick = (e) => {
            e.preventDefault()
            var formData = $("#contactForm").serialize();
            $.ajax({
                type: "Post",
                url: "/Contact/ContactMessage",
                data: formData,
                success: function () {
                    Swal.fire(
                        'Good job!',
                        'You clicked the button!',
                        'success'
                    )
                }
            })
        }
    </script>
